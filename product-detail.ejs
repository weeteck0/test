<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>SL9000</title>
</head>
<style>
  body {
    font-family: sans-serif;
    background: linear-gradient(to right, hsl(208, 25%, 90%), #a9c7ff);
}
</style>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">SL9000</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/products">Browse Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addProduct">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container">
     
        <div class="text-center"><h2>Product Details</h2></div>
        <br>
        
        <% if (product) { %>
            <div class="row">
                <div class="col-md-6">
                    <img src="/images/<%= product.image_url || 'no-image.jpg' %>" 
                         class="img-fluid" alt="<%= product.name || 'Product Image' %>">
                </div>
                
                <div class="col-md-6">
                    <% if (product.category) { %>
                        <p>
                            <span class="badge bg-primary"><%= product.category %></span>
                            <% if (product.brand) { %>
                                <span class="badge bg-secondary"><%= product.brand %></span>
                            <% } %>
                        </p>
                    <% } %>
                    
                    <p><b>Product Name:</b><br> <%= product.name || 'Unnamed Product' %></p>
                    
                    <p><b>Price:</b><br> 
                        <% if (product.price !== undefined && product.price !== null) { %>
                            $<%= parseFloat(product.price).toFixed(2) %>
                        <% } else { %>
                            <span class="text-muted">Price not available</span>
                        <% } %>
                    </p>
                    
                    <% if (product.description) { %>
                        <p><b>Description:</b><br> <%= product.description %></p>
                    <% } %>
                    
                    <p><b>Stock:</b><br> 
                        <% if (product.stock_quantity && product.stock_quantity > 0) { %>
                            <span class="text-success">✓ <%= product.stock_quantity %> available</span>
                        <% } else { %>
                            <span class="text-danger">✗ Out of stock</span>
                        <% } %>
                    </p>
                    
                    <% if (product.compatibility) { %>
                        <p><b>Compatibility:</b><br> <%= product.compatibility %></p>
                    <% } %>
                    
                    <!-- BuildPC specific buttons -->
                    <div class="mt-3">
                        <% if (product.stock_quantity && product.stock_quantity > 0) { %>
                            <button class="btn btn-success" onclick="addToCart()">Add to Cart</button>
                            <button class="btn btn-primary" onclick="addToBuild()">Add to PC Build</button>
                        <% } else { %>
                            <button class="btn btn-secondary" disabled>Out of Stock</button>
                        <% } %>
                        <a href="/updateProduct/<%= product.id %>" class="btn btn-warning">Update Product</a>
                        <a href="/deleteProduct/<%= product.id %>" 
                           onclick="return confirm('Are you sure you want to delete this product?')"
                           class="btn btn-danger">Delete Product</a>
                    </div>
                </div>
            </div>
            
            <!-- Related Products section -->
            <% if (relatedProducts && relatedProducts.length > 0) { %>
                <hr class="mt-5">
                <h3>Related Products</h3>
                <div class="row">
                    <% for(let i=0; i < relatedProducts.length; i++) { %>
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <img src="/images/<%= relatedProducts[i].image_url || 'no-image.jpg' %>" 
                                     class="card-img-top" style="height: 150px; object-fit: cover;"
                                     alt="<%= relatedProducts[i].name || 'Product Image' %>">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <a href="/product/<%= relatedProducts[i].id %>">
                                            <%= relatedProducts[i].name || 'Unnamed Product' %>
                                        </a>
                                    </h6>
                                    <% if (relatedProducts[i].price !== undefined && relatedProducts[i].price !== null) { %>
                                        <p class="text-primary">$<%= parseFloat(relatedProducts[i].price).toFixed(2) %></p>
                                    <% } else { %>
                                        <p class="text-muted">Price not available</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
            
        <% } else { %>
            <div class="alert alert-danger">
                <h4>Product Not Found</h4>
                <p>The product you're looking for doesn't exist.</p>
            </div>
        <% } %>
        
        <a href="/products" class="btn btn-secondary mt-3">Back to Products</a>
    </div>
    
    <script>
        function addToCart() {
            alert('Product added to cart successfully!');
        }
        
        function addToBuild() {
            alert('Product added to PC build successfully!');
        }
    </script>
</body>
</html>
