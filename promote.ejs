<h1>Promoted Parts</h1>

<% if (promotedProducts && promotedProducts.length > 0) { %>
    <div class="promoted-list">
        <% promotedProducts.forEach(function(product) { %>
            <div class="promoted-item">
                <h2><%= product.name %></h2>
                <p><strong>Category:</strong> <%= product.category %></p>
                <p><strong>Brand:</strong> <%= product.brand %></p>
                <p><strong>Price:</strong> $<%= product.price %></p>
                <p><%= product.description %></p>
                <% if (product.image_url) { %>
                    <img src="<%= product.image_url %>" alt="<%= product.name %>" style="max-width:200px;" />
                <% } %>
            </div>
        <% }); %>
    </div>
<% } else { %>
    <p>No promoted products found.</p>
<% } %>
